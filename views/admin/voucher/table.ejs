<table id="example2" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>No.</th>
            <th>Nama Game</th>
            <th>Kategori</th>
            <th>Nominal</th>
            <th>Status</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody> 
     
    <% for( let i = 0; i <= voucher?.length; i++ ) { %>
        <% if (voucher[i]?.name) { %>
            <tr>
                <td><%= i + 1 %> </td>
                <td><%= voucher[i]?.name %> </td> 
                <td><%= voucher[i]?.category?.name %> </td> 
                <td>
                   <% voucher[i]?.nominal.forEach(nominal => { %>
                     <div class="badge badge-warning">
                        <%= nominal?.coinName %> - <%= nominal?.coinQuantity %>
                    </div>
                   <% }) %>
                </td> 
                <td>
                    


                <% if (voucher[i]?.status=='Y') { %>
                    <div class="badge badge-success">
                        Aktif
                    </div>
                <% } else { %>
                    <div class="badge badge-success">
                        Tidak Aktif
                    </div>
                <% } %>

 
                
                </td> 
                <td class="text-center">
                <form action="/voucher/status/<%= voucher[i]?._id %>?_method=PUT " method="post">
                    <button  class="btn btn-info" style="color: white;">
                        <i class="fas fa-info "></i>
                        <% if (voucher[i]?.status=='Y' ) { %>
                                Disable
                        <% } else { %>
                                Enable
                            <% } %>                    
                    </button>
                </form>

                   
                    <a href="/voucher/edit/<%= voucher[i]?._id %>" class="btn btn-warning" style="color: white;">
                        <i class="fas fa-edit "></i>
                        Edit
                    </a>
                    <form action="/voucher/delete/<%= voucher[i]?._id %>?_method=DELETE " method="post">
                        <button type="submit" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i>
                            Hapus
                        </button>
                    </form>
                   
                </td>
            </tr>
        <% } %>
    <% } %>
                </tbody>
    <!-- <tfoot>
        <tr>
            <th>Rendering engine</th>
            <th>Browser</th>
            <th>Platform(s)</th>
            
        </tr>
    </tfoot> -->
</table>