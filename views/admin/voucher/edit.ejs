<%- include ../../partials/header.ejs %>
    <%- include ../../partials/navbar.ejs %>
        <%- include ../../partials/sidebar.ejs %>

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>Voucher</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                                    <li class="breadcrumb-item "><a href="/voucher">Voucher</a></li>
                                    <li class="breadcrumb-item active">Create</li>
                                </ol>
                            </div>
                        </div>
                    </div><!-- /.container-fluid -->
                </section>

                <!-- Main content -->
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                
                                <!-- /.card-header -->
                                <!-- general form elements -->
                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">Tambah Voucher</h3>
                                    </div>
                                    <!-- /.card-header -->
                                    <!-- form start -->
                                    <form action="/voucher/edit/<%= voucher?._id %>?_method=PUT" method="post" enctype="multipart/form-data">
                                        <div class="card-body">
                                            <div class="form-group">
                                                <label>Nama Game</label>
                                                <input type="text" value="<%= voucher.name %> " name="name" class="form-control" id="inputnamaVoucher"
                                                    placeholder="Masukkan nama game">
                                            </div>
                                            <div class="form-group">
                                                <label> Kategori</label>
                                                <select class="form-control select2" name="category" style="width: 100%;">
                                                    <% category?.forEach(item=> { %>
                                                        <option value="<%= item?._id %>">
                                                            <%= item?.name %>
                                                        </option>
                                                        <% }) %>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Nominal</label>
                                                <select class="form-control select2 "  name="nominal" multiple="multiple" required
                                                    data-placeholder="Pilih Nominal" style="width: 100%;">



<% nominal?.forEach(item=> { %>
    <option selected value="<%= item?._id %>" <% voucher.nominal.forEach(nominalVoucher=> { %>
        <% if (nominal._id===nominalVoucher._id) { %>
            selected
            <% } %>
                <% }) %> >
               <%= item?.coinName %> - <%= item?.price %>
    </option>
    <% }) %>

                                                  
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Thumbnail</label>
                                                <input type="file" name="thumbnail" class="form-control" id="thumbnail"
                                                    placeholder="Masukkan gambar">
                                                <br>
                                                <img src="" id="preview" alt="" srcset="">
                                            </div>
                                            <img src="http://localhost:3000/uploads/<%= voucher?.thumbnail %> " id="preview" alt="current picture" srcset="">

                
                                        </div>
                                        <!-- /.card-body -->
                
                                        <div class="card-footer">
                                            <button type="submit" class="btn btn-primary">Edit</button>
                                        </div>
                                    </form>
                                </div>
                                <!-- /.card -->
                                <!-- /.card-body -->
                                <!-- /.card -->
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.container-fluid -->
                </section>
                <!-- /.content -->
            </div>
            <!-- /.content-wrapper -->

            <%- include ../../partials/sidebar.ejs %>
                <%- include ../../partials/footer.ejs %>
                    <%- include ../../partials/js.ejs %>

                    <script>
                        function readUrl(input) {
                            if (input.files && input.files[0]) {
                                const reader = new FileReader()

                                reader.onload = function (e) {
                                    $('#preview').attr('src', e.target.result)
                                    $('#preview').attr('width', '20%')
                                    $('#preview').attr('height', '20%')
                                }
                                reader.readAsDataURL(input.files[0])
                            }
                        }
                        $('#thumbnail').change(function () {
                            readUrl(this)
                        })
                    </script>