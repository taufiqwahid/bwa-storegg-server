<table id="example2" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>No.</th>
            <th>Nama</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody> 
     
    <% for( let i = 0; i <= category.length; i++ ) { %>
        <% if (category[i]?.name) { %>
            <tr>
                <td><%= i + 1 %> </td>
                <td><%= category[i]?.name %> </td>
                <td class="text-center">
                <form action="/category/delete/<%= category[i]?._id %>?_method=DELETE " method="post">
                    <a href="/category/edit/<%= category[i]?._id %> " class="btn btn-warning" style="color: white;">
                    <i class="fas fa-edit " ></i> Edit</a>
                    <button  class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i>
                        Hapus
                    </button>
                </form>
                </td>
            </tr>
        <% } %>
    <% } %>
                </tbody>
