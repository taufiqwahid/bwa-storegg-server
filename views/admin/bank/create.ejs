                                                </select>
                                            </div>
                                            <div class= "form-group">
                                                <label>Nama Rekening </label>
                                                <input type="text" min="0"  name="name" class="form-control" id="inputnamaBank" placeholder="Masukkan nama Bank">
                                            </div>
                                            <div class= "form-group">
                                                <label>No. Rekening</label>
                                                <input type="number" name="noRekening" class="form-control" id="inputnamaBank" placeholder="Masukkan nama Bank">
                                            </div>
                                        </div>
                                        <!-- /.card-body -->
                                
                                        <div class="card-footer">
                                            <button type="submit" class="btn btn-primary">Simpan</button>
                                        </div>
                                    </form>
