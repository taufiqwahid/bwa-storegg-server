                                    <form action="/bank/create" method="post" >
                                        <div class="card-body">
                                            <div class="form-group">
                                                <label>Nama Bank</label>
                                                <select class="form-control select2" name="nameBank" style="width: 100%;">
                                                    <option selected="selected" class="p-4">Pilih Bank</option>
                                                    <option value="BCA">BCA</option>
                                                    <option value="BRI">BRI</option>
